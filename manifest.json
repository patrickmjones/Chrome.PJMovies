{
  "name": "PJ-Movies",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Displays Patrick rating on RT/IMDB",
  "homepage_url": "http://patrickmjones.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "https://www.rottentomatoes.com/*",
        "https://rottentomatoes.com/*",
        "https://www.imdb.com/*",
        "https://imdb.com/*",
        "http://www.imdb.com/*",
        "http://imdb.com/*"
      ],
      "js": ["js/pj-movies.js"]
    }
  ],
  "permissions": [
	"webRequest",
	"webRequestBlocking",
    "*://rottentomatoes.com/*",
    "*://www.rottentomatoes.com/*",
    "*://imdb.com/*",
    "*://www.imdb.com/*"
  ]

}
